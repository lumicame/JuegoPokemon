<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.labsoftware09.parcial_iii.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/paisaje"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/pokemon1"
        android:layout_above="@+id/pokemon2"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atacar"
        android:layout_alignBottom="@+id/pokemon2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:id="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text=""
        android:background="#fff"
        android:textColor="#000"
        android:id="@+id/pokemon1_nombre"
        android:layout_alignTop="@+id/pokemon1"
        android:layout_toEndOf="@+id/pokemon2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="vida"
        android:background="#fff"
        android:textColor="#000"
        android:id="@+id/pokemon1_vida"
        android:layout_alignBaseline="@+id/pokemon1_nombre"
        android:layout_alignBottom="@+id/pokemon1_nombre"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pokemon2_nombre"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text=""
        android:background="#fff"
        android:textColor="#000"
        android:layout_alignTop="@+id/pokemon2"
        android:layout_alignStart="@+id/pokemon2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="vida"
        android:background="#fff"
        android:textColor="#000"
        android:id="@+id/pokemon2_vida"
        android:layout_alignTop="@+id/pokemon2"
        android:layout_toStartOf="@+id/pokemon1" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/pokemon2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
