<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.labsoftware09.parcial_iii.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/paisaje"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atacar"
        android:layout_alignBottom="@+id/pokemon2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:id="@+id/atacar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#fff"
        android:textColor="#000"
        android:id="@+id/pokemon1_vida"
        android:layout_alignBaseline="@+id/pokemon1_nombre"
        android:layout_alignBottom="@+id/pokemon1_nombre"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#fff"
        android:textColor="#000"
        android:id="@+id/pokemon2_vida"
        android:layout_alignTop="@+id/pokemon2_nombre"
        android:layout_toStartOf="@+id/pokemon1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#fff"
        android:textColor="#000"
        android:id="@+id/pokemon1_nombre"
        android:layout_above="@+id/pokemon1"
        android:layout_toStartOf="@+id/pokemon1_vida"
        android:layout_marginEnd="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pokemon2_nombre"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#fff"
        android:textColor="#000"
        android:layout_above="@+id/pokemon2"
        android:layout_alignStart="@+id/pokemon2" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/pokemon2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/pokemon1"
        android:layout_marginBottom="74dp"
        android:layout_above="@+id/atacar"
        android:layout_alignEnd="@+id/pokemon1_vida" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:id="@+id/textView_daño1"
        android:layout_above="@+id/pokemon2"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:layout_alignStart="@+id/atacar"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:id="@+id/textView_daño2"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/atacar"
        android:layout_toStartOf="@+id/pokemon1" />

</RelativeLayout>
